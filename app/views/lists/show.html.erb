<div class="movie-container">
  <div class="moviecards">
      <% @list.movies.each do |movie| %>
      <div class="moviecard">
         <div class="movie-info">
          <p><%= movie.title %></p>
          <p> <%= movie.rating %></p>
        </div>
        <%= movie.poster_url %>
        <%= movie.overview %>
        <% movie.bookmarks do |bookmark| %>
        <%= bookmark.comment %>
      </div>
    <% end %>
<% end %>
</div>
</div>

<%= link_to  "Create bookmark", new_list_bookmark_path(@list) %>
