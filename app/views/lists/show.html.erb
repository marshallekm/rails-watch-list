<%= render 'components/nav' %>
<div class="movie-container">
  <div class="moviecards">
      <% @list.movies.each do |movie| %>
      <div class="moviecard">
         <div class="movie-info">
          <p><%= movie.title %></p>
          <p> <%= movie.rating %></p>
        </div>
        <%= movie.poster_url %>
        <%= movie.overview %>
        <% movie.bookmarks do |bookmark| %>
        <%= bookmark.comment %>
      </div>
    <% end %>
<% end %>
</div>
</div>

<h2>Create a bookmark </h2>

<%= simple_form_for [@list, @bookmark] do |f| %>
<%= f.input :comment %>
<%= f.association :movie, input_html: { class: 'select2' } %>
<%= f.submit %>
<% end %>

